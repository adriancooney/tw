{
  "name": "tw-beta",
  "version": "0.2.0",
  "description": "Teamwork Projects CLI and git integration.",
  "main": "build/src/TeamworkAPI.js",
  "bin": {
    "tw": "build/bin/tw"
  },
  "files": [
    "build/"
  ],
  "directories": {
    "bin": "build/bin"
  },
  "scripts": {
    "test": "DEBUG=tw* npm run lint && mocha --compilers js:babel-register test/*.js test/**/*.js",
    "build:bin:compile": "babel \"bin/tw*\" -d build",
    "build:bin:rename": "renamer -f \".js\" -r '' \"build/bin/*.js\" -v",
    "build:bin:fix-binary": "replace -q '#!/usr/bin/env babel-node.*' '#!/usr/bin/env node' build/bin -r",
    "build:bin:chmod": "node -e \"var fs = require('fs'); fs.readdirSync('build/bin').forEach(function(f){ console.log('chmod 0775 %s', f); fs.chmod('build/bin/'+f, 0775); });\"",
    "build:bin": "npm run build:bin:compile && npm run build:bin:rename && npm run build:bin:fix-binary && npm run build:bin:chmod",
    "build:parser": "pegjs --allowed-start-rules duration,task,progress,commit,installation src/parser/TeamworkParser.pegjs",
    "build:src": "babel src -d build/src",
    "build": "npm run lint && npm run clean && npm run build:src && npm run build:bin",
    "lint:bin": "eslint bin/*",
    "lint:src": "eslint src --ignore-pattern src/parser/TeamworkParser.js",
    "lint": "npm run lint:bin && npm run lint:src",
    "clean": "rimraf build/",
    "prepublish": "npm run build"
  },
  "keywords": [
    "tw"
  ],
  "author": "Adrian Cooney <adrian.cooney@teamwork.com>",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.16.0",
    "babel-plugin-transform-export-extensions": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2016": "^6.11.3",
    "babel-preset-node6": "^11.0.0",
    "babel-register": "^6.14.0",
    "chai": "^3.5.0",
    "eslint": "^1.2.1",
    "mkdirp": "^0.5.1",
    "renamer": "^0.5.6",
    "replace": "^0.3.0",
    "rimraf": "^2.4.2",
    "sinon": "^1.17.6"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "chalk": "^1.0.0",
    "commander": "^2.9.0",
    "debug": "^2.2.0",
    "editor": "^1.0.0",
    "handlebars": "^4.0.5",
    "inquirer": "^1.1.3",
    "moment": "^2.10.3",
    "open": "0.0.5",
    "os-tmpdir": "^1.0.1",
    "rc": "^1.0.3",
    "request": "^2.58.0"
  },
  "babel": {
    "presets": [
      "node6"
    ],
    "plugins": [
      "transform-export-extensions",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "indent": [
        2,
        4
      ],
      "quotes": [
        2,
        "double"
      ],
      "semi": [
        2,
        "always"
      ],
      "no-console": 0
    },
    "ecmaFeatures": {
      "modules": true
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended"
  }
}
